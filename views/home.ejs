<%- include("partials/header") -%>

<h1>Home</h1>
<p><%= startingContent %></p>

<% posts.forEach( post=>{ %>
    <% const postTitle = post.title; %>
   <% const fullText = post.content; %>
   <% const shortText = fullText.slice(0,100) + (fullText.length > 100 ? "..." : ""); %>
    <h1><%= postTitle %></h1>
    <p><%= shortText %>
        <a href="/posts/<%= postTitle %>">Read More</a>
    </p>
    
<% }) %>
    
    



<%- include("partials/footer") -%>